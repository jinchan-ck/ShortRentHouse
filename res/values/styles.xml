<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="myDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
 	<style name="xmgTransparent" parent="AppBaseTheme">
        　　	<item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">#202020</item>
　　		<item name="android:windowIsTranslucent">true</item>
　　		<item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
　　	</style>
<style name="ListBackContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:background">#566574</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListFrontContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:background">@color/background_list_front</item>
        <item name="android:paddingTop">12.5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="ListImage">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:scaleGravity">fill</item>
        <item name="android:layout_margin">5dp</item>
    </style>
	
 	<style name="ListName">
	    <item name="android:textColor">@color/text_title</item>
	    <item name="android:textSize">18sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:singleLine">true</item>
	    <item name="android:ellipsize">end</item>
    </style>

    <style name="ListTitle">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">13sp</item>
        <item name="android:singleLine">true</item>
    </style>
   
    <style name="ListDescription">
        <item name="android:textColor">@color/text_description</item>
        <item name="android:textSize">13sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListButtonAction">
        <item name="android:layout_margin">15dp</item>
    </style>
    
</resources>